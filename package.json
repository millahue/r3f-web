{
  "name": "r3f-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:gh-pages": "NODE_ENV=production next build && touch out/.nojekyll",
    "start": "next start",
    "lint": "next lint",
    "lint:sarif": "eslint . --ext .ts,.tsx --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --list-different .",
    "type-check": "tsc --noEmit",
    "audit:security": "npm audit --audit-level moderate",
    "lighthouse": "lhci autorun",
    "accessibility": "axe http://localhost:3000 --exit",
    "size-check": "size-limit",
    "semantic-release": "semantic-release",
    "release": "semantic-release --no-ci",
    "ci:quality": "npm run lint && npm run format:check && npm run type-check",
    "ci:security": "npm run audit:security",
    "ci:build": "npm run build:gh-pages",
    "ci:test": "npm run lighthouse && npm run accessibility && npm run size-check"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-spring/core": "^10.0.1",
    "@react-spring/three": "^10.0.1",
    "@react-three/drei": "^10.6.1",
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
    "@types/three": "^0.179.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.536.0",
    "motion": "^12.23.12",
    "next": "15.4.5",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "three": "^0.179.1"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@size-limit/preset-big-lib": "^11.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "lighthouse": "^12.8.1",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "size-limit": "^11.2.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  },
  "size-limit": [
    {
      "name": "Client bundle (gzipped)",
      "path": ".next/static/**/*.js",
      "limit": "150 kB"
    },
    {
      "name": "Page bundle",
      "path": ".next/server/pages/**/*.js",
      "limit": "100 kB"
    }
  ]
}
